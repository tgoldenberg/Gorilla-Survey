<div class="container" style="text-align: center;">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1> Please Sign-Up:</h1>
      <%= form_for @user do |f| %>
      <%= f.text_field :username %><br><br>
      <%= f.password_field :password %><br><br>
      <%= f.submit "Sign-Up", class: "btn btn-primary"%>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
