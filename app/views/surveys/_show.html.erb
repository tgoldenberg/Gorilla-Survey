<div class="container">
  <div class="well">
    <h1><%= @survey.title %></h1>
  </div>

<form action="/submissions" method="post">
  <% @questions.each do |question| %>
    <div class="renderedQuestion">
      <div class="questionField">
        <p class="form-label">Your survey question: </p>
        <div class="form-group flex">
          <p> <%= question.prompt %></p>
        </div>
      </div>
      <div class="form-wrapper">
        <table class="table table-striped table-bordered">
          <% question.possible_answers.each_with_index do |answer, idx| %>
            <tr>
              <th class="form-letter"><a href="#" style="color: white;"><%= @letters[idx] %>.</a></th>
              <th> <%= answer.content %></th>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  <% end %>
</form>
